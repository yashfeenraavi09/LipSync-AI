{
  "manifest_version": 3,
  "name": "LipSync AI - Lip Reading Browser Control",
  "version": "1.0.0",
  "description": "Control your browser with lip movements using AI-powered lip reading technology",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "extension.html",
    "default_title": "LipSync AI",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["extension.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
